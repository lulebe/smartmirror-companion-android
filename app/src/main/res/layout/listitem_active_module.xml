<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    app:cardCornerRadius="2dp"
    app:contentPadding="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="@dimen/activity_margin"
    android:layout_marginRight="@dimen/activity_margin"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/module_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:id="@+id/module_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/module_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <ImageView
            android:id="@+id/module_official_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/star_circle_24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/module_official_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="9dp"
            android:layout_below="@+id/module_official_iv"
            android:translationY="-2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="official"
            android:textSize="10sp"
            android:textColor="#999"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/btn_remove"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:src="@drawable/ic_delete_grey600_24dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>